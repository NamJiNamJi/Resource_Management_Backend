<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.douzone.wehago.mapper.MemberMapper">

    <insert id ="save" parameterType="com.douzone.wehago.dto.LoginDTO">
        INSERT INTO members (member_id,member_name,password) values (#{memberId},#{memberName},#{password})
    </insert>

    <select id ="findAll" resultType="com.douzone.wehago.dto.LoginDTO">
        select mid,member_id,member_name,password from members;
    </select>

    <select id = "findOne" resultType="com.douzone.wehago.dto.LoginDTO">
        select mid,member_id,member_name,password,date_of_birth from members where member_id = #{memberId};
    </select>

    <update id="update" parameterType="com.douzone.wehago.dto.LoginDTO">
        update members set member_id = #{memberId},member_name = #{memberName},password = #{password}, date_of_birth = #{dateOfBirth}
        where member_id = #{memberId}
    </update>

    <delete id="delete" parameterType="String">
        delete from members where member_id = #{memberId}
    </delete>

</mapper>